<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard - Dark Mode</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
    }
  </script>
</head>
<body class="bg-gray-900 text-gray-100 flex">

  <!-- Sidebar -->
  <aside class="w-64 bg-gray-800 h-screen shadow-lg">
    <div class="p-6">
      <h1 class="text-2xl font-bold text-blue-400">Admin Panel</h1>
    </div>
    <nav class="px-6">
      <ul>
        <li class="mb-4">
          <a href="/admin/dashboard" class="block py-2 text-gray-300 hover:text-blue-400">Dashboard</a>
        </li>
        <li class="mb-4">
          <a href="/admin/users" class="block py-2 text-gray-300 hover:text-blue-400">Users</a>
        </li>
        <li class="mb-4">
          <a href="/admin/settings" class="block py-2 text-gray-300 hover:text-blue-400">Settings</a>
        </li>
        <li class="mt-10">
          <a href="/logout" class="block py-2 text-red-400 hover:text-red-500">Logout</a>
        </li>
      </ul>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 p-8">
    <h2 class="text-3xl font-semibold mb-6">Welcome, <%= admin.name %></h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="bg-blue-900 p-6 rounded-lg shadow">
        <h3 class="text-xl font-semibold mb-2 text-blue-200">Total Users</h3>
        <p class="text-2xl font-bold text-white"><%= totalUsers %></p>
      </div>
      <div class="bg-green-900 p-6 rounded-lg shadow">
        <h3 class="text-xl font-semibold mb-2 text-green-200">Active Sessions</h3>
        <p class="text-2xl font-bold text-white"><%= activeSessions %></p>
      </div>
      <div class="bg-yellow-900 p-6 rounded-lg shadow">
        <h3 class="text-xl font-semibold mb-2 text-yellow-200">System Alerts</h3>
        <p class="text-2xl font-bold text-white"><%= systemAlerts %></p>
      </div>
    </div>
  </main>

</body>
</html>



