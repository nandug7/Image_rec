<!DOCTYPE html>
<html>
<head>
  <title>User Management</title>
</head>
<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard - Dark Mode</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
    }
  </script>
</head>
<body class="bg-gray-900 text-gray-100 flex">

  <!-- Sidebar -->
  <aside class="w-64 bg-gray-800 h-screen shadow-lg">
    <div class="p-6">
      <h1 class="text-2xl font-bold text-blue-400">Admin Panel</h1>
    </div>
    <nav class="px-6">
      <ul>
        <li class="mb-4">
          <a href="/admin/dash" class="block py-2 text-gray-300 hover:text-blue-400">Dashboard Info</a>
        </li>
        <li class="mb-4">
          <a href="/admin/users" class="block py-2 text-gray-300 hover:text-blue-400">Users</a>
        </li>
        <li class="mb-4">
          <a href="/admin/settings" class="block py-2 text-gray-300 hover:text-blue-400">Settings</a>
        </li>
        <li class="mt-10">
          <a href="/logout" class="block py-2 text-red-400 hover:text-red-500">Logout</a>
        </li>
      </ul>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 p-8">
 	<body>
  <h1>User Management</h1>
<table border="1">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Status</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.userId %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.status %></td>
        <td><%= user.createdAt.toDateString() %></td>
        <td>
          <a href="/admin/users/edit/<%= user._id %>">Edit</a> |
          <a href="/admin/users/delete/<%= user._id %>" onclick="return confirm('Are you sure?')">Delete</a> |
          <% if (user.status === 'active') { %>
            <a href="/admin/users/block/<%= user._id %>" onclick="return confirm('Block this user?')">Block</a>
          <% } else { %>
            <a href="/admin/users/unblock/<%= user._id %>" onclick="return confirm('Unblock this user?')">Unblock</a>
          <% } %>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

</body>
  </main>

</body>
</html>

</html>
